{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "CNHS Library Attendance System",
  "version": "0.0.3",
  "identifier": "com.solari.dev",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      { 
        "title": "Library Attendance System",
        "width": 800,
        "height": 600,
        "resizable": false,
        "fullscreen": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/CNHS_Main_Tuguegarao.png",
      "icons/CNHS_Main_Tuguegarao.ico"
    ]
  }
}
